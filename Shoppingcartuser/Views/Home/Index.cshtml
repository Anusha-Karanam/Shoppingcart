@model IEnumerable<Shoppingcartuser.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="d-flex justify-content-center flex-column mt-5">
                <h1 class="text-center text-success mt-5">Welcome to Shopping Cart</h1>
                <p class="text-center text-info"> Get the best deals with us</p>
            </div>
        </div> <div class="col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="img-fluid">
                <img src="https://th.bing.com/th/id/OIP.EpBltJKDUDVFx61luZFGUwHaH_?w=196&h=180&c=7&r=0&o=5&dpr=1.5&pid=1.7" class="img-fluid d-block m-auto" />
            </div>
        </div>


    </div>
    <section id="cards">
        <div class="container-fluid">
            <h1 class="text-center mt-2 mb-2">Our Products</h1>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                        <div class="card mb-4" style="width:18rem">
                            <img src="@Html.DisplayFor(modelItem => item.Image)" class="card-img-top img-fluid card_image" alt="Product Image" style="width:250px; height:250px">
                            <div class="card-body text-center">
                                <h4 class="card-title fw-bold mb-3 text-uppercase letter_spaced">@Html.DisplayFor(modelItem => item.ProductName)</h4>
                                <div>
                                    <form method="post" action="@Url.Action("AddToCart", "Cart")">
                                        <label for="quantityInput" class="fw-bold">Quantity : </label>
                                        <input type="number" id="quantityInput" name="quantity" value="1" min="1" max="10" class="form-control text-center fw-bold ms-2" />
                                        <input type="hidden" name="drugId" value="@item.Id" />
                                        <h4 class="card-text m-3 fw-bolder">
                                            <span>Price : </span><span><i class="fa-solid fa-indian-rupee-sign"></i></span> &#8377; @Html.DisplayFor(modelItem => item.Price)
                                        </h4>
                                        <button type="submit" class="btn btn-primary submit_button mt-3"><i class="fa fa-cart-plus me-1"></i>Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>



</div>


